{# templates/nos_service/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Nos Services{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Barlow', sans-serif;
            background-color: #F9F9F9;
            padding: 20px;
        }

        h1 {
            font-family: 'Rajdhani', sans-serif;
            color: #D92332;
            text-align: center;
            margin-bottom: 40px;
        }

        .services {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 0 auto;
            max-width: 1200px;
        }

        .service {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.2s ease;
        }

        .service:hover {
            transform: translateY(-10px);
        }

        .service img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .service h2 {
            font-size: 1.5em;
            color: #262526;
            margin-bottom: 10px;
        }

        .service p {
            color: #555;
            margin-bottom: 10px;
            font-size: 1em;
            line-height: 1.6;
        }

        .service p.prix {
            font-weight: bold;
            color: #D92332;
            font-size: 1.2em;
        }

        .no-services {
            text-align: center;
            font-style: italic;
            color: #888;
            font-size: 1.2em;
        }
    </style>
{% endblock %}

{% block body %}
<h1>Nos services</h1>

<div class="services">
    {% for service in services %}
        <div class="service">
            <h2>{{ service.nom }}</h2>
            <img src="{{ service.image }}" alt="{{ service.nom }}">
            <p>{{ service.description }}</p>
            <p class="prix">Prix : {{ service.prix }} â‚¬</p>
        </div>
    {% else %}
        <p class="no-services">Aucun service disponible pour le moment.</p>
    {% endfor %}
</div>
{% endblock %}
