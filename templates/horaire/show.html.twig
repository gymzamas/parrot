{% extends 'base.html.twig' %}

{% block title %}Horaire{% endblock %}

{% block body %}
    <section class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(to right, #fce4ec, #ffffff);">
        <div class="card" style="width: 50%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); background-color: #fff;">
            <div class="card-body">
                <h1 class="text-center mb-4">Horaire</h1>

                <table class="table table-bordered table-hover text-center">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ horaire.id }}</td>
                        </tr>
                        <tr>
                            <th>Jour</th>
                            <td>{{ horaire.Jour }}</td>
                        </tr>
                        <tr>
                            <th>Heure Ouverture Matin</th>
                            <td>{{ horaire.heureOuvertureMatin ? horaire.heureOuvertureMatin|date('H:i:s') : 'Non spécifié' }}</td>
                        </tr>
                        <tr>
                            <th>Heure Fermeture Matin</th>
                            <td>{{ horaire.heureFermetureMatin ? horaire.heureFermetureMatin|date('H:i:s') : 'Non spécifié' }}</td>
                        </tr>
                        <tr>
                            <th>Heure Ouverture Après-Midi</th>
                            <td>{{ horaire.heureOuvertureApresMidi ? horaire.heureOuvertureApresMidi|date('H:i:s') : 'Non spécifié' }}</td>
                        </tr>
                        <tr>
                            <th>Heure Fermeture Après-Midi</th>
                            <td>{{ horaire.heureFermetureApresMidi ? horaire.heureFermetureApresMidi|date('H:i:s') : 'Non spécifié' }}</td>
                        </tr>
                        <tr>
                            <th>Fermé</th>
                            <td>{{ horaire.ferme ? 'Oui' : 'Non' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center mt-4">
                    <a href="{{ path('app_horaire_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_horaire_edit', {'id': horaire.id}) }}" class="btn btn-primary">Modifier</a>
                </div>
                {{ include('horaire/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
{% endblock %}
