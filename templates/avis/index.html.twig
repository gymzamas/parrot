{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Les avis de nos clients</h1>

    <div class="container mt-4">
        <div class="row">
            {% if avis is not empty %}
                {% for avis in avis %}
                    <div class="col-md-6 mb-4">
                        <div class="card p-3 shadow-sm" style="border-radius: 15px;">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light d-flex justify-content-center align-items-center" 
                                         style="width: 50px; height: 50px; background-color: #f0f0f0;">
                                        <i class="bi bi-person-circle" style="font-size: 24px; color: #888;"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h5 class="mb-0">{{ avis.nom ?? 'Nom non disponible' }}</h5>
                                        <small class="text-muted">{{ avis.email ?? 'Email non disponible' }}</small>
                                    </div>
                                </div>
                                <div>
                                    <i class="bi bi-three-dots"></i> <!-- Icône de menu (facultatif) -->
                                </div>
                            </div>
                            <p>{{ avis.commentaire ?? 'Commentaire non disponible' }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success">{{ avis.note ?? 'N/A' }}/5</span>
                                    <div class="ms-2">
                                        <!-- Ajout des étoiles -->
                                        {% for i in 1..5 %}
                                            {% if i <= avis.note %}
                                                <i class="bi bi-star-fill text-warning"></i> <!-- étoile pleine -->
                                            {% else %}
                                                <i class="bi bi-star text-warning"></i> <!-- étoile vide -->
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div>
                                    <i class="bi bi-hand-thumbs-up"></i> <!-- Icône j'aime -->
                                </div>
                            </div>
                            <small class="text-muted">
                                Posté le: {{ avis.createdAt ? avis.createdAt|date('d/m/Y H:i') : 'Date inconnue' }}
                            </small>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning">
                        Aucun avis disponible pour le moment.
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('avis_submit') }}" class="btn btn-primary">Ajouter un avis</a>
        </div>
    </div>
{% endblock %}
