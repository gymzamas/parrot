{# templates/temoignage/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Témoignages{% endblock %}

{% block body %}
    <h1>Témoignages</h1>

    <h2>Laissez un témoignage</h2>
    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.commentaire) }}
        {{ form_row(form.note) }}
        <button class="btn btn-primary">{{ form_widget(form.Envoyer) }}</button>
    {{ form_end(form) }}

    <h2>Témoignages approuvés</h2>
    {% for temoignage in temoignages %}
        <div class="temoignage">
            <p><strong>{{ temoignage.nom }}</strong> ({{ temoignage.note }}/5)</p>
            <p>{{ temoignage.commentaire }}</p>
        </div>
    {% else %}
        <p>Aucun témoignage pour le moment.</p>
    {% endfor %}
{% endblock %}
