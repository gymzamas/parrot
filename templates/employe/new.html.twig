{% extends 'base.html.twig' %}

{% block title %}Create New Employe{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Barlow', sans-serif;
            background-image: url('{{ asset('images/52.jpg') }}');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
        }
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            font-family: 'Rajdhani', sans-serif;
            color: #D92332;
            text-align: center;
        }
        label {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
            color: #262526;
        }
        input[type="text"], input[type="email"], input[type="password"], select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        button {
            background-color: #D92332;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
            width: 100%;
        }
        button:hover {
            background-color: #B91F28;
        }
        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #262526;
            text-decoration: none;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Create New Employe</h1>

        {{ form_start(form) }}
            {{ form_row(form.nom, { 'attr': {'placeholder': 'Enter employee name'} }) }}
            {{ form_row(form.prenom, { 'attr': {'placeholder': 'Enter employee first name'} }) }}
            {{ form_row(form.email, { 'attr': {'placeholder': 'Enter employee email'} }) }}
            {{ form_row(form.poste, { 'attr': {'placeholder': 'Enter employee position'} }) }}
            {{ form_row(form.password, { 'attr': {'placeholder': 'Enter a secure password'} }) }}

            <button type="submit">Create Employe</button>
        {{ form_end(form) }}

        <a class="back-link" href="{{ path('app_employe_index') }}">Back to list</a>
    </div>
{% endblock %}
