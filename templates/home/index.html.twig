{% extends 'base.html.twig' %}

{% block title %}Accueil - TransLux{% endblock %}

{% block stylesheets %}
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }

        /* Hero Section */
        .hero {
            position: relative;
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%; /* Utilisation de la largeur complète de l'écran */
            height: 100vh; /* Hauteur de la section hero */
            background-image: url('{{ asset('images/mercedes-maybach2.png') }}');
            background-size: cover;
            background-position: center;
        }

        .hero .text-content {
            position: absolute;
            left: 50px;
            top: 20%;
            color: white;
        }

        .hero span {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .hero p {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .hero .cta-button {
            background-color: #e74c3c;
            color: white;
            padding: 15px 30px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
        }

        /* Section Options */
        .choose-section {
            text-align: center;
            padding: 40px 20px;
        }

        .choose-section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .choose-section a {
            color: #e74c3c;
            font-size: 1.2rem;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <div class="hero">
        <div class="text-content">
            <span>S-class</span>
            <h1>Mercedes Maybach</h1>
            <p>Réserver à partir de 4 000 €</p>
            <a href="#" class="cta-button">Réserver</a>
        </div>
    </div>

    <!-- Section Options -->
    <div class="choose-section">
        <h2>Choisir un véhicule</h2>
        <a href="#">voir tout ></a>
    </div>
{% endblock %}
