{% extends 'base.html.twig' %}

{% block title %}Accueil - TransLux{% endblock %}

{% block stylesheets %}
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #d94350;
            color: #333;
        }

        /* Hero Section */
        .hero {
            position: relative;
            background-color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
            background-image: url('{{ asset('images/mercedes-maybach2.png') }}');
            background-size: cover;
            background-position: center;
        }

        .hero .text-content {
            position: absolute;
            left: 50px;
            top: 20%;
            color: white;
        }

        .hero span {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .hero p {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        /* Section Options */
        .choose-section {
            text-align: center;
            padding: 40px 20px;
        }

        .choose-section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .choose-section a {
            color: #e74c3c;
            font-size: 1.2rem;
            text-decoration: none;
        }

        /* Marques populaires (Flexbox) */
        .brand-selection {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin-top: 40px;
            padding: 20px;
        }

        .brand-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 20px;
            width: 200px;
            margin: 10px;
            transition: transform 0.3s ease;
        }

        .brand-card:hover {
            transform: scale(1.05);
        }

        .brand-card img {
            max-width: 100px;
            height: auto;
            margin-bottom: 15px;
        }

        .brand-card h3 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .brand-card a {
            text-decoration: none;
            color: inherit;
        }

        /* Flexbox pour afficher les voitures de luxe */
        .luxury-cars-section {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin-top: 40px;
            padding: 20px;
        }

        .luxury-car {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 20px;
            width: 250px;
            margin: 10px;
            transition: transform 0.3s ease;
        }

        .luxury-car:hover {
            transform: scale(1.05);
        }

        .luxury-car img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .luxury-car h3 {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .luxury-car a {
            text-decoration: none;
            color: inherit;
        }

        /* Responsive Media Queries */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .hero p {
                font-size: 1.2rem;
            }

            .brand-card {
                width: 150px;
            }

            .luxury-car {
                width: 200px;
            }
        }

        @media (max-width: 576px) {
            .hero h1 {
                font-size: 1.8rem;
            }

            .hero p {
                font-size: 1rem;
            }

            .text-content {
                left: 20px;
                top: 30%;
            }

            .brand-card {
                width: 100px;
            }

            .luxury-car {
                width: 150px;
            }

            .choose-section h2 {
                font-size: 1.5rem;
            }

            .choose-section a {
                font-size: 1rem;
            }
        }
    </style>
{% endblock %}

