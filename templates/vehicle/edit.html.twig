{% extends 'base.html.twig' %}

{% block title %}Modifier le véhicule{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    h1 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 30px;
        color: #333;
    }

    .form-container {
        margin-top: 20px;
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .action-buttons a,
    .action-buttons form button {
        display: inline-block;
        background-color: #1e90ff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        margin: 0 10px;
    }

    .action-buttons a:hover,
    .action-buttons form button:hover {
        background-color: #1c86ee;
    }

    .back-link {
        display: inline-block;
        color: #333;
        text-decoration: none;
        padding: 10px 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 0.9rem;
    }

    .back-link:hover {
        background-color: #f5f5f5;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Modifier le véhicule</h1>

    <div class="form-container">
        {{ include('vehicle/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="action-buttons">
        <a href="{{ path('app_vehicle_index') }}" class="back-link">Retour à la liste</a>
        {{ include('vehicle/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
